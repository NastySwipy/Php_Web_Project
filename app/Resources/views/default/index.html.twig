{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content">
        <div class="row">
            {% for article in pagination %}
                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>
                       <a href="{{ path('article_view', {'id': article.id}) }}">
                           <img src="{{ asset('uploads/images/' ~ article.image) }}" width="350" height="200"></a>
                        <p>
                            {{ article.content[:150] ~ '...' }}
                        </p>

                        <small class="author">
                            {{ article.author.fullName }}
                        </small>

                        <small class="author">
                            Views: {{ article.viewCount }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-info btn-xs"
                                   href="{{ path('article_view', {'id': article.id}) }}">Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
        <a class="btn btn-info btn-xs" href="{{ path('blog_index') }}"><i class="glyphicon glyphicon-filter"></i>ViewCount</a>
        <a class="btn btn-info btn-xs" href="{{ path('blog_index_orderLatest') }}"><i class="glyphicon glyphicon-filter"></i>Latest</a>
{% endblock %}
