{% extends 'base.html.twig' %}

{% block main %}
    <div>
        <h1>Hi, {{ user.shortName }}</h1>
    </div>
    <div>
        <h3>Email: {{ user.email }}</h3>
    </div>
    <div>
        <h3>Full Name: {{ user.fullName }}</h3>
    </div>
    <div>
        <h3>Join Date: {{ user.dateCreated|date('d-m-Y')}} at {{ user.dateCreated.format('H:i')}}</h3>
    </div>
{% endblock %}